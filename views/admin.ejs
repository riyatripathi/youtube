  <body>
    <div class="container-fluid text-center jumbotron heading-background text-light">
      <h2 class="py-3">Admin Panel - Manage Products</h2>
    </div>
    
    <div class="container mt-5">
      <div class="d-flex">
        <form class="ms-auto" method="GET" action="/logout">
          <br />
          <button type="submit" class="btn btn-danger">
            Logout
          </button>
        </form>
      </div>
      <div>
        <!-- Add your form here -->
        
      </div>
      <!-- Button Add Product -->
      <div class="d-flex">
      <button
        class="btn btn-primary my-3 me-auto"
        id="addProductButton"
        data-bs-toggle="modal"
        data-bs-target="#addProductModal"
      >
        Add Product
      </button>
    </div>

      <!-- Bootstrap Modal for adding a new product -->
      <div
        class="modal fade"
        id="addProductModal"
        tabindex="-1"
        aria-labelledby="addProductModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <!-- Add your form here -->
              <!-- upload file also -->
              <form id="addProductForm" enctype="multipart/form-data">
                <div class="col-md-6">
                  <label for="productName" class="form-label"
                    >Product Name</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="productName"
                    name="productName"
                  />
                </div>
                <div class="col-12">
                  <label
                    for="productDescription"
                    class="form-label"
                    name="productDescription"
                    >Description</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="productDescription"
                    name="productDescription"
                  />
                </div>

                <!-- <div class="col-12">
                  <label for="productLink" class="form-label" name="productLink"
                    >Drive Image Link / ID</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="productLink"
                    name="productLink"
                  />
                </div> -->

                <div>
                  <label for="affiliateLink" class="form-label" name="affiliateLink">
                    Affiliate Link
                  </label>
                  <input
                    type="url"
                    class="form-control"
                    id="affiliateLink"
                    name="affiliateLink"
                  />
                </div>

                <div class="col-12">
                  <label for="youtubeLink" class="form-label" name="youtubeLink"
                    >Youtube Link</label
                  >
                  <input
                    type="url"
                    class="form-control"
                    id="youtubeLink"
                    name="youtubeLink"
                  />
                </div>

                <div class="col-12">
                  <label for="productImage" class="form-label">Product Image</label>
                  <input type="file" class="form-control" id="productImage" name="productImage" accept="image/*" />
                </div>

                <br />
                <button type="submit" class="btn btn-primary">
                  Add Product
                </button>
              </form>
            </div>
          </div>
        </div>
        
      </div>
      

      <!-- Bootstrap Modal for editing a product -->
      <div
        class="modal fade"
        id="editProductModal"
        tabindex="-1"
        aria-labelledby="editProductModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Modal content here... -->
          </div>
        </div>
      </div>
      <div class="table-responsive">
      <table id="productTable" class="table table-hover table-striped table-borderless display">
        <thead class="table-light">
          <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Drive Image ID</th>
            <th>Affiliate Link</th>
            <th>Youtube Link</th>
            <th>Views</th>
            <th>PIN-TO-TOP</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <!-- Table rows will be populated dynamically using JavaScript -->
        </tbody>
      </table>
      </div>
    </div>

    <script>
      let productTable = null;

      // Initialize DataTable
      $(document).ready(() => {

        productTable = $("#productTable").DataTable({
          // Enable server-side processing
          processing: true,
          serverSide: true,
          responsive: true,
          ajax: {
            url: "/server-side-products",
            type: "POST",
          },
          columns: [
            { data: null,
              render: function (data, type, row) {
                return parseInt(data.product_id);
              }
            },
            { data: "product_name" },
            { data: "product_description" },
            { data: "product_link" }, // image link / drive image id
            // { data: "affiliate_link" },
            {
              data: null,
              render: function (data,type,row){
                return `<a href="${data.affiliate_link}" target="_blank" title="${data.affiliate_link}">Link</a>`;
              }
            },
            { data: null,
              render: function (data, type, row) {
                return `<a href="${data.youtube_link}" target="_blank" title="${data.youtube_link}">Link</a>`;
              }
            },
            {
              data: null,
              render: function (data,type,row){
                viewsData = parseInt(data.clicks);
                return viewsData;
              }
            },
            {
              data: null,
              render: function (data,type,row){
                pinData = `<button class="btn btn-light" onclick="unPinProduct(${data.product_id})"><i class="fa-solid fa-thumbtack" style="font-size: 20px;color: #70066e; transform:rotate(40deg)"></i></button>`;
                unPinData = `<button class="btn btn-light" onclick="pinProduct(${data.product_id})"><i class="fa-solid fa-thumbtack" style="font-size: 20px;color: #C35523;"></i></button>`;
                if(parseInt(data.pin)){
                  return pinData;
                } else {
                  return unPinData;
                }
              }
            },
            {
              data: null,
              render: function (data, type, row) {
                return `<button class="edit-product edit-button btn btn-success" id="e${data.product_id}" data-product-id="${data.product_id}">Edit</button>`;
              },
            },
            {
              data: null,
              render: function (data, type, row) {
                return `<button class="delete-product delete-button btn btn-danger" id="d${data.product_id}" data-product-id="${data.product_id}">Delete</button>`;
              },
            }
          ],
        });

        
        
        // Handle "Edit" button click
        $("#productTable tbody").on("click", "button.edit-product", (e) => {
          const productId = e.target.attributes.id.value;
          // Make an AJAX request to fetch product details
          $.ajax({
            url: `/find-product/${productId}`,
            method: "POST",
            dataType: "json",
            success: (product) => {
              console.log(product);
              // Populate the modal form fields with product details
              $("#editProductModal .modal-content").html(`
              <div class="modal-header">
              <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
              <form id="editProductForm" data-id="${productId}" onsubmit="submitEditProduct(this)">
                  <!-- Populate form fields with product details -->
                  <div class="form-group">
                    <label for ="editProductID">Product ID</label>
                    <input type="text" class="form-control" id="editProductID" name="editProductID" value="${product.product_id}" disabled>
                    <label for="editProductName">Product Name</label>
                    <input type="text" class="form-control" id="editProductName" name="editProductName" value="${product.product_name}">
                    <label for="editProductDescription">Product Description</label>
                    <input type="text" class="form-control" id="editProductDescription" name="editProductDescription" value="${product.product_description}">
                    
                    <label for="editAffiliateLink">Affiliate Link</label>
                    <input type="text" class="form-control" id="editAffiliateLink" name="editAffiliateLink" value="${product.affiliate_link}">
                    
                    <label for="editYoutubeLink">Youtube Link</label>
                    <input type="text" class="form-control" id="editYoutubeLink" name="editYoutubeLink" value="${product.youtube_link}">
                    
                    <label for="editProductLink"><a href="/images/${product.product_link}" target="_blank">Current Image</a></label>
                    <input type="text" class="form-control" id="editProductLink" name="editProductLink" value="${product.product_link}">
                  </div>
                  <label for="productImage" class="form-label">Product Image</label>
                  <input type="file" class="form-control" id="productImage" name="productImage" accept="image/*" />
                
                  <br/>
                  <button type="submit" class="btn btn-primary">Save Changes</button>

              </form>
              </div>
          `);

              // Show the edit product modal
              $("#editProductModal").modal("show");
              productTable.ajax.reload();
            },
            error: (error) => {
              console.error("Error fetching product details:", error);
            },
          });
        });

        // $("#editProductForm").submit((e) => {
        //   e.preventDefault();
        //   // get attribute data-id 
        //   const productId = e.currentTarget.getAttribute("data-id");
        //   const formData = new FormData(e.currentTarget);
        //   // print values of form data
        //   const data = Object.fromEntries(formData);
        //   console.log(data)
  
        //   $.ajax({
        //     url: `/update-product/e${productId}`,
        //     method: "POST",
        //     data: formData,
        //     contentType: false,
        //     processData: false,
        //     success: (response) => {
        //       console.log("Response received from the server:", response);

        //       if (Array.isArray(response.data)) {
        //         productTable.ajax.reload();
        //         e.currentTarget.reset();
        //         $("#editProductForm").modal("hide");
        //       } else {
        //         console.error("Response data format is not as expected.");
        //       }
        //     },
        //     error: (error) => {
        //       console.error("Error adding product:", error);
        //     },
        //   });
        // });

        $("#addProductForm").submit((e) => {
          e.preventDefault();
          const formData = new FormData(e.currentTarget);
          // print values of form data
          const data = Object.fromEntries(formData);
          console.log(data)
  
          $.ajax({
            url: "/add-product",
            method: "POST",
            data: formData,
            contentType: false,
            processData: false,
            success: (response) => {
              console.log("Response received from the server:", response);

              if (Array.isArray(response.data)) {
                productTable.ajax.reload();
                e.currentTarget.reset();
                $("#addProductModal").modal("hide");
              } else {
                console.error("Response data format is not as expected.");
              }
            },
            error: (error) => {
              console.error("Error adding product:", error);
            },
          });
        });
        // Handle "Delete" button click
        $("#productTable tbody").on("click", "button.delete-product", (e) => {
          const productId = e.target.attributes.id.value;
          const row = $(e.target).closest("tr");
          if (confirm("Are you sure you want to delete this product?")) {
            $.ajax({
              url: `/products/delete/${productId}`,
              method: "DELETE",
              success: (response) => {
                console.log("Product deleted successfully:", response);
                const productTable = $("#productTable").DataTable();
                productTable.ajax.reload();
              },
              error: (error) => {
                console.error("Error deleting product:", error);
              },
            });
          }
        });
      });

      function pinProduct(id) {
          $.ajax({
            url: `/admin/pin-product/${id}`,
            method: "GET",
            dataType: "json",
            success: (data) => {
              productTable.ajax.reload();
            },
          });
        }

        function unPinProduct(id) {
          $.ajax({
            url: `/admin/unpin-product/${id}`,
            method: "GET",
            dataType: "json",
            success: (data) => {
              productTable.ajax.reload();
            },
          });
        }

        function submitEditProduct(form) {
          // get attribute from form
          const productID = form.getAttribute("data-id");
          const formData = new FormData(form);
          $.ajax({
            url: `/update-product/${productID}`,
            method: "POST",
            data: formData,
            contentType: false,
            processData: false,
            success: (response) => {
              console.log("Response received from the server:", response);
              productTable.ajax.reload();
            },
            error: (error) => {
              console.error("Error updating product:", error);
            },
          })
        }
    </script>
  </body>
